.form,.wpcf7
	width 100%
	//max-width: 476px;
	margin 20px auto
	display: flex;
	flex-direction: column;
	align-content: flex-start;
	+above($medium)
		margin 60px auto
	/* display: block; */
	input,textarea
		display block
		background-color rgba(0,0,0,0)
		border 1px solid white
		border-radius 10px
		color white
		width 100%
		padding: 12px 18px;
		outline none
		font-size 16px
		margin-bottom: 24px;
		+above($medium)
			margin-bottom 0
	textarea
		height: 100px;
		margin-bottom: 24px;
	&_col
		display flex
		width 100%
		flex-direction column
		+above($medium)
			margin-bottom: 24px;
			flex-direction row
			justify-content space-between
		input
			width 100%
			+above($medium)
				width 95%
		span:last-child
			justify-content: flex-end;
			display flex
	.wpcf7-submit
		@extend .police_bold
		text-transform uppercase
		cursor: pointer;
		display: block;
		width auto
		padding 14px 22px
		background-color $main
		color white
		margin 40px auto 0 auto
		font-size 12px
		letter-spacing 1px
		-webkit-appearance: none;
		border none
		@extend .transition
		&:hover
			//text-decoration underline
			color white
			background-color black
div.wpcf7 .ajax-loader
	background-image: url(../img/ajax-loader.gif)
	background-repeat no-repeat
	width: 24px;
	height: 24px;
	margin-top: 12px
	background-size: 24px 24px;
form .wpcf7-not-valid-tip
	display none!important
form .wpcf7-not-valid,div.wpcf7-validation-errors
	border: dashed 4px white!important;
div.wpcf7-validation-errors,div.wpcf7-mail-sent-ok
	margin: 32px 0;
	text-align: center;
	font-size 18px
	background-position 12px
	background-repeat no-repeat
div.wpcf7-mail-sent-ok
	border: dashed 4px $white !important;
::-webkit-input-placeholder
	color white
	font-size 14px
:-moz-placeholder
	color white
	font-size 14px
::-moz-placeholder
	color white
	font-size 14px
:-ms-input-placeholder
	color white
	font-size 14px
.modal_close
	position: absolute;
	top: -32px;
	right: 0;
	color: white;
	cursor: pointer;
	background-color: $main;