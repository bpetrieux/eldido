body
	background-color #fff
	animation: fadeIn 1s forwards
	margin 0 auto
	@extend p
	max-width: 2400px;
img
	max-width 100%
html
	font-size: 62%;
	font-weight:500
*
	box-sizing:border-box;
section,header,footer,article
	lost-utility: clearfix;
	position relative
.container
	lost-center: $large 30px
.hero
	text-align center
	color white
	background-size: cover;
	background-repeat: no-repeat;
	background-position: center;
	+above($large)
		background-attachment: fixed;
	.container
		padding-top 60px
		padding-bottom 80px
		+above($medium)
			padding-top 126px
			padding-bottom 126px
	h1
		max-width 940px
		margin 0 auto
	&_logo
		max-width 392px
		width 100%
.services
	&_wrap
		+above($medium)
			display flex
			flex-direction row
			justify-content center
			align-items center
	&_box
		text-align center
		padding 40px 0
		max-width 370px
		margin 0 auto
		+above($medium)
			padding 70px 20px 76px 20px
	&_icone
		margin-bottom 28px
	&_text
		margin: 12px 0;
	.btn
		margin-top 4px
		a
			padding: 2px 10px;
			display: block;
			font-size: 14px;
.page-template-template_services
	.contact
		.wpcf7 .wpcf7-submit
			background-color white
			color $main
			&:hover
				color white
				background-color black
.contact
	background-color $main
	text-align center
	color white
	background-size: cover;
	background-repeat: no-repeat;
	background-position: center;
	h1
		font-size 42px
		letter-spacing: 2px;
	.container
		padding-top 126px
		padding-bottom 126px
		max-width 540px
	.wpcf7
		margin-top 50px
	
.info
	background-color $main
	text-align center
	color white
	padding 90px 0 110px 0
	h4
		margin-bottom: 24px;
		max-width: 850px;
		margin: 0 auto 24px auto;
.servicesPages
	background-color #ebebeb
	height: 100%;
	&_box
		display flex
		flex-direction column
		height: 100%;
		min-height: 530px
		position relative
		min-height:100%;
		+above($medium)
			flex-direction row
			justify-content stretch
			align-items center
	.reverse
		@extend .servicesPages_box
		+above($medium)
			flex-direction: row-reverse!important;
	&_bg
		width 100%
		z-index 1
		+above($medium)
			width 50%
			background-size cover
			align-self stretch
		span
			display: flex;
			flex-flow: column;
			height: 100%;
		img
			vertical-align: middle;
			+above($medium)
				display none
	&_content
		width 100%
		padding 20px 0
		position relative
		+above($medium)
			padding 60px 60px 40px 60px
			width 50%
			min-height 530px
		ul
			position: relative;
			padding-left: 18px;
		li
			margin-bottom 12px
			&:before
				position: absolute;
				content: "\2022 ";
				color: $main;
				left: 0;
				font-size: 22px;
	&_img
		display none
		+above($medium)
			display block
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			z-index 0
			max-height: 100%;