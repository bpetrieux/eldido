.header
	background-color black
	&_nav
		display none
		+above($large)
			display flex

	&_mobile
		display none
	.container
		align-items flex-start
		@extend .flex-large
		+above($large)
			align-items center
			justify-content center
	&_nav
		ul
			@extend .flex-large
			justify-content center
			margin 0
		a
			padding: 12px 30px;
			color white
			@extend .police_regular
			font-weight 500
			&:hover
				background-color $main
				color white
	&_logo
		width:134px
		margin-top 2px
.header-mobile-actif
	.header_language
		display block
		position fixed
	.header_mobile
		background-color: rgba(0,0,0,0.99);
		width 100%
		height 100vh
		position fixed
		top 0
		display none
		padding-top: 77px;
		overflow scroll
		display block
		z-index 2
		+above($medium)
			width 400px
			right 0
			box-shadow: 3px 0px 8px 3px grey;
		+above($large)
			display none
		&_wrap
			display flex
			justify-content center
			align-items center
			animation: fadeIn 1s forwards;
			cursor: pointer
			z-index 200
		ul
			width 100%
			margin 0
			li
				position relative
				border-bottom: 1px solid rgba(144,144,144,0.3);  
			a
				padding 12px 24px
				display block
				width 100%
				text-transform uppercase
				color white
				&:hover
					background-color $main
					color white
		.sub-menu
			display none
			list-style-type: disc;
			padding-left 30px
			li
				margin-left 10px
				a
					padding 8px 24px
					+above($medium)
						padding 12px 24px
			&-open
				display block
			.sub-menu
				display block
		.three
			.sub-menu
				list-style-type: none
				ul
					list-style-type: disc;
				li
					padding-left 0
					margin-left 0px
					a
						background-color: black;
						color white
						&:hover
							background-color $main
							color white
					li
						a
							background-color white
							color black
							&:hover
								background-color $main
								color white
		.menu-item-has-children a
			&:before
				content "+"
				position absolute
				right 22px
				font-size 24px
				z-index 0
		.menu-item-has-children .menu-item-has-children a
		.menu-item-has-children .menu-item a
			&:before
				content ""
		.list-actif a
			&:before
				content "-"
				font-size 38px
				z-index 0
.logged-in.header-mobile-actif
	.header_mobile
		top:46px;